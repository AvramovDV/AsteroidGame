<Window x:Class="WCFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WCFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="OnWindowLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Отделы">
            <ListView Name="DepartmentsList">

            </ListView>
        </GroupBox>
        <GroupBox Header="Сотрудники" Grid.Column="2">
            <ListView Name="EmployeesList" ItemsSource="{Binding SelectedValue.Employees, ElementName=DepartmentsList }">

            </ListView>
        </GroupBox>

    </Grid>
</Window>
